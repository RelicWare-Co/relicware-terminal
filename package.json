{
  "name": "relicware-terminal",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "bun run --parallel client:dev server:dev",
    "client:dev": "bun run --cwd client dev",
    "server:dev": "bun run --cwd server dev",
    "build": "bun run --sequential client:build server:build",
    "client:build": "bun run --cwd client build",
    "server:build": "bun run --cwd server build",
    "test": "bun run --parallel client:test server:test",
    "client:test": "bun run --cwd client test",
    "server:test": "bun run --cwd server test",
    "auth:generate": "bun run --cwd server auth:generate"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@mantine/carousel": "^8.3.1",
    "@mantine/charts": "^8.3.1",
    "@mantine/code-highlight": "^8.3.1",
    "@mantine/core": "^8.3.1",
    "@mantine/dates": "^8.3.1",
    "@mantine/dropzone": "^8.3.1",
    "@mantine/form": "^8.3.1",
    "@mantine/hooks": "^8.3.1",
    "@mantine/modals": "^8.3.1",
    "@mantine/notifications": "^8.3.1",
    "@mantine/nprogress": "^8.3.1",
    "@mantine/spotlight": "^8.3.1",
    "@mantine/tiptap": "^8.3.1",
    "@tiptap/extension-link": "^3.4.5",
    "@tiptap/pm": "^3.4.5",
    "@tiptap/react": "^3.4.5",
    "@tiptap/starter-kit": "^3.4.5",
    "better-auth": "^1.3.13",
    "dayjs": "^1.11.18",
    "embla-carousel": "^8.5.2",
    "embla-carousel-react": "^8.5.2",
    "recharts": "^3.2.1"
  }
}
